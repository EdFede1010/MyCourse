@model LessonEditInputModel
<section class="lesson-info">
    <form method="post">
        <input type="hidden" asp-for="RowVersion"/>
        <div class="row">
            <div class="col-md-9">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-md-3 d-flex align-items-center">
                <button type="submit" class="btn btn-primary btn-lg btn-block"><i class="fa-solid fa-floppy-disk" style="padding-right:5px"></i>Salva</button>                
                <button class="btn btn-danger btn-lg ml-3" type="button" data-toggle="modal" data-target="#delete-modal"><i class="fas fa-trash-alt"></i></button>
            </div>
        </div>
        <div class="row">
            <div class="col-12" asp-validation-summary="All"></div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input type="text" class="form-control form-control-lg" asp-for="Title">
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" data-summernote rows="18"></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="col-md-3">
                <aside>
                    <div class="form-group">
                        <label asp-for="Duration"></label>
                        <input type="time" asp-for="Duration" class="form-control" step="1">
                        <span asp-validation-for="Duration"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Order"></label>
                        <input type="number" asp-for="Order" class="form-control">
                        <span asp-validation-for="Order"></span>
                    </div>
                </aside>
            </div>
        </div>
    </form>
    <form method="post" asp-action="Delete" asp-route-id="@Model.Id">
        <input type="hidden" asp-for="CourseId">
        <div id="delete-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="delete-modal-title" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="delete-modal-title">Conferma eliminazione</h5>
                        <button class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>La lezione verrà eliminata insieme a tutti i suoi contenuti, siete sicuri di questa modifica?</p>
                    </div>
                    <div class="modal-footer justify-content-between">
                        <button class="btn btn-light" type="button" data-dismiss="modal">Annulla</button>
                        <button type="submit" class="btn btn-danger btn-lg ml-3">Conferma</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>
<!-- summernote -->
<link rel="stylesheet" href="~/Summernote/summernote-lite.min.css" />
<script src="~/Summernote/summernote-lite.min.js"></script>
<script src="~/Summernote/lang/summernote-it-IT.min.js"></script>

<script>
    $(document).ready(function () {
        $('[data-summernote]').summernote({
            lang: 'it-IT',
            height: 500,
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['color', ['color']],
                ['para', ['ul', 'ol']],
                ['insert', ['video']],
                ['view', ['codeview']]
            ]
        });
    });

    function updatePreview(inputFile) {
        var reader = new FileReader();
        reader.onload = function (e) {
            $('#preview').attr('src', e.target.result);
        };
        reader.readAsDataURL(inputFile.files[0]);
    }
</script>